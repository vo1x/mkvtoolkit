{
  "name": "mkvtoolkit",
  "version": "0.6.0",
  "license": "MIT",
  "main": "dist-electron/index.js",
  "author": {
    "name": "Maximilian St√ºmpfl"
  },
  "description": "Starter using Vite 2+ React +Typescript + Electron for fast prototyping.",
  "keywords": [
    "vite",
    "react",
    "electron",
    "typescript"
  ],
  "repository": {
    "url": "https://github.com/lTimeless/vite-reactts-electron-starter"
  },
  "productName": "mkvtoolkit",
  "scripts": {
    "dev": "vite",
    "dev:electron": "npm run build:electron && electron .",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p electron",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "pack": "npm run build && electron-builder --dir",
    "clean": "rimraf dist main src/out",
    "type-check": "tsc",
    "lint": "eslint . --ext js,jsx,ts,tsx",
    "lint:fix": "eslint . --ext js,jsx,ts,tsx --fix"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.0.14",
    "@vitejs/plugin-react": "^4.3.4",
    "child_process": "^1.0.2",
    "electron-is-dev": "^3.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "i18next": "^24.2.3",
    "lucide-react": "^0.479.0",
    "mediainfo.js": "^0.3.4",
    "mica-electron": "^1.5.16",
    "motion": "^12.5.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-i18next": "^15.4.1",
    "vite": "^6.2.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@typescript-eslint/eslint-plugin": "8.26.1",
    "@typescript-eslint/parser": "8.26.1",
    "electron": "^35.0.1",
    "electron-builder": "^25.1.8",
    "eslint": "9.22.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "postcss": "^8.5.3",
    "prettier": "3.5.3",
    "tailwindcss": "^4.0.14",
    "typescript": "^5.8.2"
  },
  "build": {
    "asar": true,
    "files": [
      "dist-electron",
      "dist-vite"
    ],
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "resources"
    }
  }
}
